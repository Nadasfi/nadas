# Nadas.fi Staging Environment Configuration

# Application
ENVIRONMENT=staging
API_VERSION=v1
PROJECT_NAME=Nadas.fi
DEBUG=false
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=staging-api.nadas.fi,*.nadas.fi
ALLOWED_ORIGINS=https://staging.nadas.fi,https://staging-app.nadas.fi

# Database
DATABASE_URL=postgresql+asyncpg://nadas_staging:${DATABASE_PASSWORD}@staging-db.nadas.fi:5432/nadas_staging
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://staging-redis.nadas.fi:6379/0
REDIS_CACHE_TTL=3600

# JWT Security
SECRET_KEY=${JWT_SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Privy Authentication (Staging)
PRIVY_APP_ID=${PRIVY_STAGING_APP_ID}
PRIVY_APP_SECRET=${PRIVY_STAGING_APP_SECRET}
PRIVY_VERIFICATION_KEY=${PRIVY_STAGING_VERIFICATION_KEY}

# Hyperliquid Configuration (Testnet for Staging)
HYPERLIQUID_TESTNET_URL=https://api.hyperliquid-testnet.xyz
HYPERLIQUID_MAINNET_URL=https://api.hyperliquid.xyz
HYPERLIQUID_NETWORK=testnet
HYPERLIQUID_USE_WEBSOCKET=true
HYPERLIQUID_MAX_POSITION_SIZE=1000.0
HYPERLIQUID_DEFAULT_SLIPPAGE=0.01
HYPERLIQUID_ENABLE_PAPER_TRADING=false

# Alchemy (Staging)
ALCHEMY_API_KEY=${ALCHEMY_STAGING_API_KEY}
ALCHEMY_HYPERLIQUID_URL=${ALCHEMY_STAGING_HYPERLIQUID_URL}

# Supabase (Staging)
SUPABASE_URL=${SUPABASE_STAGING_URL}
SUPABASE_ANON_KEY=${SUPABASE_STAGING_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_STAGING_SERVICE_ROLE_KEY}

# GlueX Cross-Chain Integration (Staging)
GLUEX_API_KEY=${GLUEX_STAGING_API_KEY}
GLUEX_ROUTER_URL=https://router.gluex.xyz/v1
GLUEX_EXCHANGE_RATES_URL=https://exchange-rates.gluex.xyz
GLUEX_DEFAULT_SLIPPAGE=0.005
GLUEX_MAX_PRICE_IMPACT=0.05
GLUEX_ENABLE_CROSS_CHAIN=true

# Notification System (Staging)
NOTIFICATION_CHECK_INTERVAL_SECONDS=30
NOTIFICATION_WEBSOCKET_PORT=8001
NOTIFICATION_MAX_RULES_PER_USER=50
NOTIFICATION_COOLDOWN_MINUTES=15
NOTIFICATION_RETENTION_DAYS=30
EMAIL_SMTP_SERVER=${EMAIL_SMTP_SERVER}
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=${EMAIL_USERNAME}
EMAIL_PASSWORD=${EMAIL_PASSWORD}
PUSH_NOTIFICATION_API_KEY=${PUSH_NOTIFICATION_API_KEY}

# AI Service Configuration (Staging)
OPENAI_API_KEY=${OPENAI_STAGING_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_STAGING_API_KEY}
AWS_ACCESS_KEY_ID=${AWS_STAGING_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_STAGING_SECRET_ACCESS_KEY}
AWS_REGION=us-west-2
AWS_BEARER_TOKEN_BEDROCK=${AWS_STAGING_BEARER_TOKEN_BEDROCK}
AI_PRIMARY_PROVIDER=openai
AI_SECONDARY_PROVIDER=anthropic
AI_TERTIARY_PROVIDER=bedrock

# Celery Configuration (Staging)
CELERY_BROKER_URL=redis://staging-redis.nadas.fi:6379/1
CELERY_RESULT_BACKEND=redis://staging-redis.nadas.fi:6379/2
CELERY_TIMEZONE=UTC

# Rate Limiting (Staging)
RATE_LIMIT_REQUESTS_PER_MINUTE=500
RATE_LIMIT_BURST=1000

# Logging (Staging)
LOG_LEVEL=INFO

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# Monitoring (Staging)
SENTRY_DSN=${SENTRY_STAGING_DSN}
PROMETHEUS_METRICS_ENABLED=true
GRAFANA_DASHBOARD_ENABLED=true